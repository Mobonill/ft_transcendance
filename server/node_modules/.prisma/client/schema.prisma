datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(cuid())
  email      String   @unique
  username   String   @unique
  provider   String
  providerId String?
  avatarUrl  String?
  createdAt  DateTime @default(now())

  @@index([provider, providerId])
}
